<div class="container">
<p id="notice"><%= notice %></p>

<h1>My Events!</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= image_tag(event.picture, width: '150') %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class: 'btn btn-success' %>
</div>

