<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :size => 75, :placeholder => " What is the event called? " %>
    </p>
  </div>
  <div class="field">
    <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, :size => "77x8", :placeholder => " Say more about it!" %>
    </p>
  </div>
  <div class="field">
    <p>
    <%= f.label :picture %><br>
    <%= f.text_field :picture, :size => 75, :placeholder => " Insert an image url here. "%>
    </p>
  </div>
  <div class="field">
    <p>
    <%= f.label :date %><br>
    <%= f.date_select :date %>
    </p>
  </div>
  <div class="actions">
    <p>
    <%= f.submit class: 'btn btn-success' %>
    </p>
  </div>
<% end %>
